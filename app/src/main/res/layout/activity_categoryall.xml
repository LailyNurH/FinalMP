<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".categoryall">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:background="@drawable/bg2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-black"
        android:text="CATEGORY"
        android:textColor="#fff"
        android:textSize="25dp"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/logo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp">

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/cat_1"
                    android:layout_width="129dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/kom" />

                <ImageButton
                    android:id="@+id/cat_2"
                    android:layout_width="129dp"
                    android:layout_height="38dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/saintek" />

                <ImageButton
                    android:id="@+id/cat_3"
                    android:layout_width="129dp"
                    android:layout_height="38dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bio" />

                <ImageButton
                    android:id="@+id/cat_4"
                    android:layout_width="129dp"
                    android:layout_height="38dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/diri" />

                <ImageButton
                    android:id="@+id/cat_5"
                    android:layout_width="129dp"
                    android:layout_height="38dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/foto" />

                <ImageButton
                    android:id="@+id/cat_6"
                    android:layout_width="129dp"
                    android:layout_height="38dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ki" />

                <ImageButton
                    android:id="@+id/cat_7"
                    android:layout_width="129dp"
                    android:layout_height="38dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_btn" />

                <ImageButton
                    android:id="@+id/cat_8"
                    android:layout_width="129dp"
                    android:layout_height="38dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_btn" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="700dp">


    </LinearLayout>

</RelativeLayout>