<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".komunikasi"
    android:background="#fff">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="KOMUNIKASI"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"/>
            <ImageButton
                android:id="@+id/frg_kom1"
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:layout_margin="15dp"
                android:background="@drawable/kom_1" />
            <ImageButton
                android:id="@+id/frg_kom2"
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:layout_margin="15dp"
                android:background="@drawable/kom_2" />
            <ImageButton
                android:id="@+id/frg_kom3"
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:layout_margin="15dp"
                android:background="@drawable/kom_3" />
            <ImageButton
                android:id="@+id/frg_kom4"
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:layout_margin="15dp"
                android:background="@drawable/kom_1" />
            <ImageButton
                android:id="@+id/frg_kom5"
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:layout_margin="15dp"
                android:background="@drawable/kom_2" />
            <ImageButton
                android:id="@+id/frg_kom6"
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:layout_margin="15dp"
                android:background="@drawable/kom_3" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>