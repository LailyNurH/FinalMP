<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".pinjam_ruang">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="179dp"
        android:background="@drawable/bg2" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="158dp"
        android:layout_marginTop="45dp"
        android:fontFamily="sans-serif-black"
        android:text="PINJAM RUANG"
        android:textColor="#fff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/meet"
        android:layout_width="199dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"
        android:fontFamily="sans-serif-black"
        android:text=" MEETING ROOM "
        android:textColor="@color/black"
        android:textSize="25dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="250dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageButton
                android:id="@+id/act_cinema"
                android:layout_width="wrap_content"
                android:layout_height="291dp"
                android:layout_margin="15dp"
                android:background="@drawable/cinema" />


            <ImageButton
                android:id="@+id/act_abp"
                android:layout_width="wrap_content"
                android:layout_height="291dp"
                android:layout_margin="15dp"
                android:background="@drawable/abp" />

            <ImageButton
                android:id="@+id/act_c1"
                android:layout_width="wrap_content"
                android:layout_height="291dp"
                android:layout_margin="15dp"
                android:background="@drawable/citra1" />

            <ImageButton
                android:id="@+id/act_c2"
                android:layout_width="wrap_content"
                android:layout_height="291dp"
                android:layout_margin="15dp"
                android:background="@drawable/citra2" />

            <ImageButton
                android:id="@+id/act_bsc"
                android:layout_width="wrap_content"
                android:layout_height="291dp"
                android:layout_margin="15dp"
                android:background="@drawable/bsc" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="291dp"
                android:layout_margin="15dp"
                android:background="@drawable/b5" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="291dp"
                android:layout_margin="15dp"
                android:background="@drawable/b2" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>