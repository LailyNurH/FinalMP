<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pinjam_ruang"
    android:background="#fff">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="179dp"
        android:background="@drawable/bg2" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/logo" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="158dp"
        android:layout_marginTop="45dp"
        android:fontFamily="sans-serif-black"
        android:text="PINJAM RUANG"
        android:textColor="#fff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/meet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="177dp"
        android:fontFamily="sans-serif-black"
        android:text="MEETING ROOM"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp">

        <HorizontalScrollView
            android:id="@+id/Scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D18CE8"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/cinema"/>
                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/abp"/>
                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/citra1"/>
                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/citra2"/>
                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/b5"/>
                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/b2"/>
                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bsc"/>

            </LinearLayout>

        </HorizontalScrollView>
    </LinearLayout>

</RelativeLayout>